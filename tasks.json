{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "Build C++ project",
          "type": "shell",
          "group": "build",
          "command": ".\\build.bat"
      },
      {
          "label": "Build & run C++ project",
          "type": "shell",
          "group": {
              "kind": "test",
              "isDefault": true
          },
          "command": ".\\build.bat && .\\bin\\main.exe"
      },
      {
          "type": "cppbuild",
          "label": "C/C++: cl.exe build active file",
          "command": "cl.exe",
          "args": [
              "/Zi",
              "/EHsc",
              "/nologo",
              "/Fe:",
              "${fileDirname}\\${fileBasenameNoExtension}.exe",
              "${file}"
          ],
          "options": {
              "cwd": "${fileDirname}"
          },
          "problemMatcher": [
              "$msCompile"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "detail": "Task generated by Debugger."
      }
  ]
}
